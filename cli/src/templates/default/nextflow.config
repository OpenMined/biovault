docker {
  enabled    = true
  // Apply these options to every `docker run` Nextflow executes
  // Note: Platform is NOT specified here to allow Docker to auto-select based on
  // image availability (native ARM64 if available, x86 emulation otherwise).
  // Set BIOVAULT_FORCE_X86_CONTAINERS=1 to force x86 emulation for all containers.
  runOptions = '--network none'
}

process {
  container = 'alpine:latest'
}